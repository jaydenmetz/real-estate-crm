# ===========================================
# Real Estate CRM - Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials!
# Last Updated: November 2, 2025

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
# Railway provides DATABASE_URL automatically in production
# For local development, get your connection string from Railway dashboard
DATABASE_URL=postgresql://postgres:password@localhost:5432/railway

# Legacy individual database variables (not used if DATABASE_URL is set)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_NAME=railway

# ===========================================
# JWT AUTHENTICATION (REQUIRED)
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-64-character-random-hex-string-here

# Token expiry times
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# ===========================================
# SERVER CONFIGURATION (REQUIRED)
# ===========================================
PORT=5050
NODE_ENV=development
API_VERSION=v1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# ADMIN ACCOUNT (REQUIRED FOR SETUP)
# ===========================================
ADMIN_EMAIL=admin@jaydenmetz.com

# ===========================================
# SECURITY CONFIGURATION (REQUIRED)
# ===========================================
# Security event log retention (days)
SECURITY_EVENT_RETENTION_DAYS=90

# ===========================================
# EXTERNAL SERVICES (OPTIONAL)
# ===========================================

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# INTEGRATIONS (OPTIONAL)
# ===========================================

# Google OAuth (for calendar integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# SkySlope (for document management)
SKYSLOPE_CLIENT_ID=your-skyslope-client-id
SKYSLOPE_CLIENT_SECRET=your-skyslope-client-secret
SKYSLOPE_ACCESS_KEY=your-skyslope-access-key
SKYSLOPE_SECRET=your-skyslope-secret

# AWS (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-bucket-name

# ===========================================
# FILE UPLOADS (OPTIONAL)
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ===========================================
# TESTING (DEVELOPMENT ONLY)
# ===========================================
# These are used by automated tests - DO NOT use in production
TEST_JWT=test-jwt-token-for-automated-tests
TEST_API_KEY=test-api-key-for-automated-tests
