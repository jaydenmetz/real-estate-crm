# ===========================================
# Real Estate CRM - Frontend Environment Variables
# ===========================================
# Copy this file to .env for local development
# Railway sets these automatically in production
# Last Updated: November 2, 2025

# ===========================================
# API CONFIGURATION (REQUIRED)
# ===========================================
# Backend API URL
# Development: http://localhost:5050
# Production: https://api.jaydenmetz.com (set in Railway)
REACT_APP_API_URL=http://localhost:5050
REACT_APP_BASE_URL=http://localhost:5050

# WebSocket URL
# Development: ws://localhost:5050
# Production: wss://api.jaydenmetz.com (set in Railway)
REACT_APP_WS_URL=ws://localhost:5050

# ===========================================
# REACT CONFIGURATION
# ===========================================
# Disable Fast Refresh (causes issues with some components)
FAST_REFRESH=false

# Node environment
NODE_ENV=development

# ===========================================
# GOOGLE SERVICES (OPTIONAL)
# ===========================================
# Google OAuth Client ID (for calendar integration)
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google Maps API Key (for address autocomplete)
# Get from: Google Cloud Console
# Enable: Places API, Maps JavaScript API, Geocoding API
# Restrict to: https://crm.jaydenmetz.com/* and http://localhost:3000/*
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===========================================
# ERROR TRACKING (OPTIONAL)
# ===========================================
# Sentry DSN (for frontend error tracking)
REACT_APP_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id

# Force Sentry in development (optional - default: false)
REACT_APP_SENTRY_FORCE=false
